<%layout("/layouts/boilerplate.ejs")%>

<div class="row mt-3">
  <div class="col-8 offset-lg-2">
    <h3>Edit your listing</h3>
    <form
      method="post"
      novalidate
      class="needs-validation"
      action="/listings/<%=listing._id%>?_method=put"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Enter title</label>
        <input
          name="listing[title]"
          class="form-control"
          value="<%=listing.title%>"
          type="text"
          required
        />
        <div class="invalid-feedback">Please fill the necessary title</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Enter description</label>
        <textarea
          name="listing[description]"
          type="text"
          class="form-control"
          required
        >
<%=listing.description%></textarea
        >
      </div>
      Original listing image
      <div class="mb-3 row">
        <img class="col-5" src="<%= originalImageUrl %>" alt="" />
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Enter image url/ position</label>
        <input name="listing[image]" class="form-control" type="file" />
      </div>
      <div class="row mb-3">
        <div class="col-4">
          <label for="price" class="form-label">Enter price</label>
          <input
            name="listing[price]"
            class="form-control"
            value="<%=listing.price%>"
            type="number"
            required
          />
        </div>
        <div class="col-8 mb-3">
          <label for="country" class="form-label">Enter country</label>
          <input
            type="text"
            class="form-control"
            name="listing[country]"
            value="<%=listing.country%>"
            required
          />
        </div>
      </div>
      <!-- hello -->
      <div class="mb-3">
        <label for="location" class="form-label">Enter location</label>
        <input
          name="listing[location]"
          class="form-control"
          value="<%=listing.location%>"
          type="text"
          required
        />
      </div>
      <button class="btn btn-dark mb-5 edit-btn">edit</button>
    </form>
  </div>
</div>

<%layout("/layouts/boilerplate.ejs")%>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 1rem;
    opacity: 0.7;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .tax-toggle {
    align-self: center;
    border: 1px solid rgb(209, 187, 187);
    border-radius: 1rem;
    padding: 1rem 2rem;
    margin-left: 2rem;
  }
  @media (max-width: 1250px) {
    .media {
      display: none;
    }
  }
  @media (max-width: 995px) {
    .media-mid {
      display: none;
    }
  }
  @media (max-width: 770px) {
    .media-sm {
      display: none;
    }
  }
  .tax-info {
    display: none;
  }
</style>
<div id="filters">
  <div class="filter">
    <div>
      <i class="fa-solid fa-fire"></i>
    </div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter media-sm">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic Cities</p>
  </div>
  <div class="filter media-sm">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>castles</p>
  </div>
  <div class="filter media-mid">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing Pools</p>
  </div>
  <div class="filter media-mid">
    <div><i class="fa-solid fa-tents"></i></div>
    <p>Camping</p>
  </div>
  <div class="filter media">
    <div><i class="fa-solid fa-tractor"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter media">
    <div><i class="fa-solid fa-igloo"></i></div>
    <p>Arctic Zone</p>
  </div>
  <div class="tax-toggle">
    <div class="form-check form-switch form-check-reverse">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        >Show total after taxes</label
      >
    </div>
  </div>
</div>
<div class="row row-cols-xxl-3 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
  <%for(let listings of allListings){%>
  <a method="get" href="/listings/<%=listings._id%>" class="listing-Link">
    <div class="card col listing-card">
      <img
        src="<%=listings.image.url%>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%=listings.title%></b>
          <br />
          &#8377;<%=listings.price%>/night &nbsp;&nbsp;<i class="tax-info"
            >+18% gst</i
          >
        </p>
      </div>
    </div>
  </a>
  <%}%>
</div>
<script>
  const taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.querySelectorAll(".tax-info");
    for (info of taxInfo) {
      if (info.style.display !== "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
